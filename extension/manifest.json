{
    "background": {
        "service_worker": "background.js"
    },
    "description": "Browse and Watch Twitch Livestreams/Videos with chat",
    "incognito": "split",
    "manifest_version": 3,
    "name": "Twitch Watcher",

    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "short_name": "TwW",
    "action": {
      "default_icon": {
        "32": "resources/icons/favicon-v1.png"
      }
    },
    "update_url": "http://0.0.0.0",
    "version": "1"
}
